<div class="main user-show">
  <div class="container">
    <div class="user">
      <h3><%= @user.name %></h3>
      <p>メールアドレス: <%= @user.email %></p>
      <p>管理者権限: <%= @user.admin %></p>
    </div>
    <div class="my_task">
      <table class="table">
        <tr>
          <th>タスク名</th>
          <th>内容</th>
          <th>終了期限</th>
          <th>ステータス</th>
          <th>優先順位</th>
          <th></th>
          <th></th>
        </tr>
        <% @tasks.each do |task| %>
        <tr>
          <td class="task_row"><%= task.title %></td>
          <td class="task_row"><%= task.content %></td>
          <td class="task_row"><%= l task.due_date %></td>
          <td class="task_row"><%= task.status %></td>
          <td class="task_row"><%= task.priority %></td>
        </tr>
        <% end %>
      </table>
    </div>
    <div class="choice">
      <% if @user.id==@current_user.id %>
        <%= link_to '編集', edit_user_path(@user), class: 'btn btn-outline-warning' %>
        <%= link_to '削除', user_path(@user), method: :delete, class: 'btn btn-outline-warning', data: { confirm: '本当に削除しますか?' } %>
      <% end %>
    </div>
  </div>
</div>