<div class="conteiner">
  <h2>管理者　ユーザー一覧</h2>
    <br>
    <div class="new_btn">
      <%= link_to 'ユーザー登録', new_admin_user_path, class:"btn btn-outline-primary" %>
    </div>
    <br>
  <table class="table">
    <tr>
      <th>No.</th>
      <th>ユーザー名</th>
      <th>アドレス</th>
      <th>タスク数</th>
      <th>管理者権限</th>
      <th colspan="3"></th>
    </tr>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.tasks.count %></td>
      <td><%= user.admin == true ? 'あり' : 'なし' %></td>
      <td><%= link_to '詳細', admin_user_path(user.id), class:"btn btn-warning" %></td>
      <td><%= link_to '編集', edit_admin_user_path(user.id), class:"btn btn-warning" %></td>
      <td><%= link_to '削除', admin_user_path(user.id), method: :delete, data: { confirm: '本当に削除しますか?' } ,class:"btn btn-danger"%></td>
    </tr>
    <% end %>
  </table>
</div>