
<%= link_to '編集', edit_task_path(@task) %> |
<%= link_to 'タスク一覧', tasks_path %>

<p>
  <strong>タスク名:</strong>
  <%= @task.title %>
</p>

<p>
  <strong>内容:</strong>
  <%= @task.content %>
</p>

<p>
  <strong>終了期限:</strong>
  <%= @task.due_date %>
</p>

<p>
  <strong>ステータス:</strong>
  <%= @task.status %>
</p>

<p>
  <strong>優先順位:</strong>
  <%= @task.priority %>
</p>

<p>
  <strong>ラベル:</strong>
  <% @task.labels.each do |label| %>
    <%= label.name %>
  <% end %>
</p>

<p>
  <strong>作成者：</strong>
  <%= @task.user.name %>
</p>
<div class="user_only_link">
  <% if @task.user == current_user %>
    <%= link_to '編集', edit_task_path(@task.id), class: 'btn btn-outline-success' %>
    <%= link_to '削除', task_path(@task.id), method: :delete, data: { confirm: '本当に削除しますか?' }, class: 'btn btn-outline-danger' %>
  <% end %>
</div>